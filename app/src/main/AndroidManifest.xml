<?xml version="1.0" encoding="utf-8"?>
<manifest package="android.stakbrowser.amitrai.retrofitexample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="android.demo.amitrai.staksdk.Activities.VoiceListeningDailogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/VoiceDialogTheme"/>
        <activity
            android:name="android.demo.amitrai.staksdk.Activities.VoiceResultHandler"
            android:screenOrientation="portrait"
            android:theme="@style/VoiceDialogTheme"/>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">


        </activity>
    </application>

</manifest>
