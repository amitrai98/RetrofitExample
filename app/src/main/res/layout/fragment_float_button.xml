<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="android.stakbrowser.amitrai.retrofitexample.Fragments.FragmentWebSearch">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layout_searchtools"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <EditText
            android:id="@+id/edt_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:focusable="false"
            android:layout_weight=".7"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/layout_searchtools"
        android:id="@+id/recycle_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>



    <android.demo.amitrai.staksdk.StakUtil.StakFloatButton
        android:id="@+id/img_floatmic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/mic_image_blue"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:elevation="8dp"/>

</RelativeLayout>
